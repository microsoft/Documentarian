{
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.preset": "OTBS",
    "powershell.codeFormatting.useConstantStrings": true,
    "powershell.codeFormatting.useCorrectCasing": true,
    "powershell.integratedConsole.suppressStartupBanner": true,
    "reflowMarkdown.preferredLineLength": 99,
    "vale.valeCLI.config": "${workspaceFolder}/.vale.ini",
    "yaml.format.singleQuote": true,
    "files.eol": "\n",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.hugo_build.lock": true,
        "Source/Modules/*/public": true,
        "Source/Modules/*/resources": true,
        "Source/Hugo/*/public": true,
        "Source/Hugo/*/resources": true
    }
}
